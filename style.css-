body {
  margin: 0;
  padding: 0;
  background: linear-gradient(135deg, #ffc0cb, #ffe4e1);
  font-family: 'Arial', sans-serif;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

